#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>
#include <string.h>


typedef struct point
{
    char x;
    short y;
    int z;

}POINT;

int main()
{

    unsigned int totalStructByte = sizeof(POINT);
    POINT p1;

    p1.x = 0xFF; // 1 byte of memory
    p1.y = 0x1234; // 2 bytes of memory
    p1.z = 0x6789ABCD; // 4 bytes of memory

    return 0;
}





    






